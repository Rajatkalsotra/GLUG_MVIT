    <div id="contact" class="paddsection">
      <div class="container">
        <div class="contact-block1">
            <div class="jumbotron">
                <div class="container">
                <h2 class="mb-30">Create Your Event</h2>
                  <form action="/new" method="POST" role="form" class="contactForm">
                    <div class="row">
                      <div class="col-lg-12">
                        <div class="form-group contact-block1">
                          <input type="text" name="event[name]" class="form-control" id="name" placeholder="Event Name" required="required" />  
                        </div>
                      </div>
                      <div class="col-lg-12">
                        <div class="form-group contact-block1">
                          <input type="text" name="event[org]" class="form-control" id="name" placeholder="Organiser" required="required" />  
                        </div>
                      </div>
                      <div class="col-lg-12">
                        <div class="form-group contact-block1">
                          <input type="email" name="event[email]" class="form-control" id="name" placeholder="Your Email" required="required" />
                          </div>  
                      </div> 
                       <div class="col-lg-12">
                        <div class="form-group contact-block1">

                          <input type="date" name="event[date]" class="form-control" value="2019-01-01"  required="required"/>     
                        </div>
                      </div>
                      <div class="col-lg-12">
                        <div class="form-group contact-block1">
                          <input type="time" name="event[time]" class="form-control" value="08:00" required="required"/>     
                        </div>
                      </div>
                      <div class="col-lg-12">
                        <div class="form-group contact-block1">
                          <textarea name="event[desc]" class="form-control" rows="6" id="desc" placeholder="About event..." required="required" /></textarea>  
                        </div>
                      </div> 
                        <div class="col-lg-12">
                        <div class="form-group contact-block1">
                          <input type="text" name="event[phone]" class="form-control" id="phone" placeholder="Phone No" required="required"/>     
                        </div>
                      </div>
                       <div class="col-lg-12">
                        <div class="form-group contact-block1">
                          <input type="text" name="event[venue]" class="form-control" id="venue" placeholder="Venue" required="required"/>     
                        </div>
                      </div>
                      <!-- <div class="col-lg-12">
                        <div class="form-group contact-block1">
                          <input type="text" name="event[url]" class="form-control" id="time" placeholder="Form link(if any)" />     
                        </div>
                      </div> -->
                      <div class="col-lg-5">
                        <input type="submit" class="btn btn-primary" value="Submit">
                      </div>
                    </div>
                  </form>
                </div>
            </div>
          </div>
        </div>
      </div>
